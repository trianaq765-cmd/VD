    ShowDistance = true,
    MinTextSize = 10,
    MaxTextSize = 18,
    ScaleDistance = 100,
    UpdateRate = 0.2,
    DebugMode = true,
    
    -- Colors
    ColorKiller = Color3.fromRGB(255, 0, 0),
    ColorMurderer = Color3.fromRGB(200, 0, 50),
    ColorTraitor = Color3.fromRGB(255, 50, 0),
    
    -- Round detection
    RoundRestartCooldown = 5,
    ExpectedKillerCount = 1
}


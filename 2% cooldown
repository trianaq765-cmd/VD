print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
print("âš¡ COOLDOWN REDUCER ACTIVE!")
print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")
print(string.format("ğŸ—¡ï¸  Attack CD: %.0f%% (%.1fx faster)", Config.AttackCooldownMultiplier * 100, 1 / Config.AttackCooldownMultiplier))
print(string.format("âœ¨ Ability CD: %.0f%% (%.1fx faster)", Config.AbilityCooldownMultiplier * 100, 1 / Config.AbilityCooldownMultiplier))
print(string.format("âš¡ Power CD: %.0f%% (%.1fx faster)", Config.PowerCooldownMultiplier * 100, 1 / Config.PowerCooldownMultiplier))
print("ğŸ›¡ï¸  Safe mode: " .. (Config.SafeMode and "ON" or "OFF"))
print("â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”")

